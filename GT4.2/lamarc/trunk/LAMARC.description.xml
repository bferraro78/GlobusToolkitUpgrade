<?xml version="1.0"?>

<!-- TODO: Update program name and version -->                                                                                                  
<program name="LAMARC" version="1.0"
        xmlns="http://cummings.umiacs.umd.edu/GSBL/service_description"
        xmlns:tns="http://cummings.umiacs.umd.edu/GSBL/service_description"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://cummings.umiacs.umd.edu/GSBL/service_description http://cummings.umiacs.umd.edu/GSBL/service_description.xsd">
	<!-- TODO: Update argument list -->
    <arguments>
	<argument key="dataFile">
			<flag>arg0</flag>
			<type>java.lang.String</type>
			<description>File containing the data that lamarc is to process. Acceptable data files are PHYLIP, COALESCE/FLUCTUATE, and MIGRATE/RECOMBINE files</description>
			<takes>data_file</takes>
			<optionalFlag>false</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
 		<argument key="paramFile">
			<flag>arg1</flag>
			<type>java.lang.String</type>
			<description>File containing the parameters needed by lam_conv and lamarc</description>
			<takes>param_file</takes>
			<optionalFlag>false</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
 		<argument key="outputFile">
			<flag>o</flag>
			<type>java.lang.String</type>
			<description>Output file to hold main results of lamarc computation</description>
			<takes>output_file</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>	
	</arguments>
</program>
