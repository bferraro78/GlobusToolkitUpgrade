<?xml version="1.0" encoding="UTF-8"?>
<deployment name="defaultServerConfig" 
    xmlns="http://xml.apache.org/axis/wsdd/"
    xmlns:java="http://xml.apache.org/axis/wsdd/providers/java"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <!-- Instance service -->
    <service name="edu/umd/grid/bio/lamarc/LAMARCService" provider="Handler" use="literal" style="document">
        <parameter name="className" value="edu.umd.grid.bio.lamarc.impl.LAMARCService"/>
        <wsdlFile>share/schema/edu/umd/grid/bio/lamarc/LAMARC_service.wsdl</wsdlFile>
        <parameter name="allowedMethods" value="*"/>
        <parameter name="handlerClass" value="org.globus.axis.providers.RPCProvider"/>
        <parameter name="scope" value="Application"/>
        <parameter name="providers" value="GetRPProvider DestroyProvider SubscribeProvider GetCurrentMessageProvider"/>
        <parameter name="loadOnStartup" value="true"/>
    </service>

    <!-- Factory service -->
    <service name="edu/umd/grid/bio/lamarc/LAMARCFactoryService" provider="Handler" use="literal" style="document">
        <parameter name="className" value="edu.umd.grid.bio.lamarc.impl.LAMARCFactoryService"/>
        <wsdlFile>share/schema/edu/umd/grid/bio/lamarc/LAMARCFactory_service.wsdl</wsdlFile>
        <parameter name="allowedMethods" value="*"/>
        <parameter name="handlerClass" value="org.globus.axis.providers.RPCProvider"/>
        <parameter name="scope" value="Application"/>
        <parameter name="instance" value="edu/umd/grid/bio/lamarc/LAMARCService"/>
    </service>

</deployment>

