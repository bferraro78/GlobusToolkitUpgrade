<?xml version="1.0"?>

<!-- TODO: Update program name and version -->                                                                                                  
<program name="Structure" version="1.0"
        xmlns="http://cummings.umiacs.umd.edu/GSBL/service_description"
        xmlns:tns="http://cummings.umiacs.umd.edu/GSBL/service_description"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://cummings.umiacs.umd.edu/GSBL/service_description http://cummings.umiacs.umd.edu/GSBL/service_description.xsd">
	<!-- TODO: Update argument list -->
    <arguments>
                <!-- jobname -->
                <argument key="jobname">
                        <flag>jobname</flag>
                        <type>java.lang.String</type>
                        <description>The arbitrary name to assign this job or batch of jobs.</description>
                        <takes>jobname</takes>
                        <optionalFlag>true</optionalFlag>
                        <optionalValue>false</optionalValue>
                </argument>
	        <!-- replicates -->
	        <argument key="replicates">
        	        <flag>replicates</flag>
		        <type>java.lang.Integer</type>
                        <description>The number of times to execute this job.</description>
                        <takes>replicates</takes>
                        <optionalFlag>true</optionalFlag>
                        <optionalValue>false</optionalValue>
                </argument>
                <argument key="mainparams">
			<flag>m</flag>
			<type>java.lang.String</type>
			<description>Read a different parameter input file instead of 'mainparams'</description>
			<takes>filename</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
		<argument key="extraparams">
			<flag>e</flag>
			<type>java.lang.String</type>
			<description>Read a different parameter input file instead of 'extraparams'</description>
			<takes>filename</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
		<argument key="MAXPOPS">
			<flag>K</flag>
			<type>java.lang.Integer</type>
			<description>Change the number of populations</description>
			<takes>n</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
		<argument key="NUMLOCI">
			<flag>L</flag>
			<type>java.lang.Integer</type>
			<description>Change the number of loci</description>
			<takes>n</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
		<argument key="NUMINDS">
			<flag>N</flag>
			<type>java.lang.Integer</type>
			<description>Change the number of individuals</description>
			<takes>n</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
		<argument key="inputFile">
			<flag>i</flag>
			<type>java.lang.String</type>
			<description>Read a different input file</description>
			<takes>filename</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
		<argument key="outputFile">
			<flag>o</flag>
			<type>java.lang.String</type>
			<description>Print results to a different output file</description>
			<takes>filename</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>



	</arguments>
</program>
