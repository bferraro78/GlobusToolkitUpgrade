<?xml version="1.0"?>

<program name="gsi" version="1.0"
	xmlns="http://cummings.umiacs.umd.edu/GSBL/service_description"
	xmlns:tns="http://cummings.umiacs.umd.edu/GSBL/service_description"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://cummings.umiacs.umd.edu/GSBL/service_description http://cummings.umiacs.umd.edu/GSBL/service_description.xsd">
	<arguments>
		<argument key="jobname">
			<flag>jobname</flag>
			<type>java.lang.String</type>
			<description>The arbitrary name to assign this job or batch of jobs.</description>
			<takes>jobname</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
		<argument key="replicates">
			<flag>replicates</flag>
			<type>java.lang.Integer</type>
			<description>The number of times to execute this job.</description>
			<takes>replicates</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
		<argument key="treeFile">
			<flag>treeFile</flag>
			<type>java.lang.String</type>
			<description>The phylogenetic tree for which to compute gsi.</description>
			<takes>tree_file(s)</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
		<argument key="assignmentFile">
			<flag>assignmentFile</flag>
			<type>java.lang.String</type>
			<description>The file which assigns classes to the taxa in treeFile.</description>
			<takes>assignment_file(s)</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
		<argument key="outputFile">
			<flag>output</flag>
			<type>java.lang.String</type>
			<description>The file which will contain the results.</description>
			<takes>output_file</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
		<argument key="treeNumber">
			<flag>treenumber</flag>
			<type>java.lang.Integer</type>
			<description>Calculate gsi for a specific tree in the file, instead of for all the trees.</description>
			<takes>tree_number</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
		<argument key="numPerms">
			<flag>numperms</flag>
			<type>java.lang.Integer</type>
			<description>Number of permutations to compute.  Defaults to 10000.</description>
			<takes>num_perms</takes>
			<optionalFlag>true</optionalFlag>
			<optionalValue>false</optionalValue>
		</argument>
	</arguments>
</program>
